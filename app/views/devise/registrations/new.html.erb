<div class="well span8" style='height:310px;margin:auto'>

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),:wrapper => :inline) do |f| %>
	  <%= f.error_notification %>

	  <div class="inputs">
	    <%= f.input :email, :required => true, :autofocus => true %>
	    <%= f.input :name, :required => true, :autofocus => true %>
	    <%= f.input :password, :required => true %>
	    <%= f.input :password_confirmation, :required => true %>
	  </div>

	  <div class="actions">
	    <%= f.button :submit, "Sign up", :class => "large primary" %>
	  </div>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
	
</div>