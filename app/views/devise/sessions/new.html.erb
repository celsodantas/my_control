<div class="well span8" style='height:250px;margin:auto'>

	<%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name), :wrapper => :inline do |f| %>
		<%= f.input :email, :required => false, :autofocus => true, %>
		<%= f.input :password, :required => false, %>
		<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>

		<div class="actions">
			<%= f.button :submit, "Sign in", :class => 'large primary' %>
		</div>

	<% end %>

	<%= render :partial => "devise/shared/links" %>
</div>